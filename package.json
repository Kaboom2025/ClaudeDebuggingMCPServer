{
    "name": "python-debug-mcp-server",
    "version": "1.0.0",
    "description": "A Python debugging MCP server that integrates with debugpy for AI-driven debugging in Claude Code",
    "keywords": [
        "mcp",
        "model-context-protocol",
        "python",
        "debugger",
        "debugpy",
        "claude-code",
        "ai-debugging"
    ],
    "author": "Claude Code Contributors",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/python-debug-mcp-server"
    },
    "bugs": {
        "url": "https://github.com/your-org/python-debug-mcp-server/issues"
    },
    "homepage": "https://github.com/your-org/python-debug-mcp-server#readme",
    "type": "module",
    "main": "build/index.js",
    "bin": {
        "python-debug-mcp-server": "build/index.js"
    },
    "files": [
        "build/",
        "examples/",
        "docs/",
        "README.md",
        "package.json"
    ],
    "scripts": {
        "build": "tsc",
        "start": "node build/index.js", 
        "dev": "tsc --watch",
        "prepublishOnly": "npm run build",
        "test": "echo \"Run examples with: python examples/test_runner.py flask\""
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "uuid": "^11.1.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/ws": "^8.18.1",
        "typescript": "^5.5.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "python": ">=3.8.0"
    },
    "peerDependencies": {
        "debugpy": "*"
    }
